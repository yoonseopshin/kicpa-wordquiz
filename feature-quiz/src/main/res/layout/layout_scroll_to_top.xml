<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/scroll_to_top_layout_height">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_circle_daynight_gray100a"
            android:clickable="true"
            android:contentDescription="@string/scroll_to_top"
            android:focusable="true"
            android:foreground="@drawable/background_common_ripple_unbounded"
            android:onClick="@{onClickListener}"
            android:padding="16dp"
            android:src="@drawable/ic_navigate_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/daynight_gray900s" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
