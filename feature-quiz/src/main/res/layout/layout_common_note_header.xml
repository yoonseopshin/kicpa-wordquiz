<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="headerTitle"
            type="String" />

        <variable
            name="isShowing"
            type="boolean" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onLongClickListener"
            type="android.view.View.OnLongClickListener" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:clipToPadding="false"
        android:paddingVertical="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/daynight_gray050s"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:foreground="@drawable/background_common_ripple"
            android:minHeight="48dp"
            android:onClick="@{onClickListener}"
            android:onLongClick="@{onLongClickListener}">

            <TextView
                android:id="@+id/tv_note_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@{headerTitle}"
                android:textColor="@color/daynight_gray700s"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/total_note" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>
